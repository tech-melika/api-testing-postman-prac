			"event": [
				{
					"listen": "prerequest",
					"script": {
						"id": "08755ebb-30a1-4587-8a92-230e257d9ea9",
						"exec": [
							"//Lodash function",
							"pm.globals.set(\"id_dynamic\", _.random(0,10));"
						],
